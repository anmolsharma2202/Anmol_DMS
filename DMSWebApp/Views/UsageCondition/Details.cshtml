@model IEnumerable<DMSWebApp.Models.UsageCondition>

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-white">Usage Condition</h1>

<div class="text-white">
    <h4>Based on Drug Name</h4>
    <hr />
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OtherDetails)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrugName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OtherDetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DrugName)
            </td>
            
        </tr>
}
    </tbody>
</table>
</div>
<div>
    
    <a class="btn btn-primary" asp-action="Index">Back</a>
</div>
