@model IEnumerable<DMSWebApp.Models.ReactionAgent>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-white">Reaction Agent-View</h1>

<a class="btn btn-success" asp-action="Create">Reaction Agent Registration</a>
<table class="table text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReactionAgentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LongName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReactionAgentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LongName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a class="text-white" asp-action="Details" asp-route-id="@item.ReactionAgentId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
